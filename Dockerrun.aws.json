{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name" : "client",
            "image" : "itaytest/multi-client",
            "hostname" : "client",
            "essential" : false,
			"memory" : 128
        },
        {
            "name" : "server",
            "image" : "itaytest/multi-server",
            "hostname" : "api",
            "essential" : false,
			"memory" : 128
        },
        {
            "name" : "worker",
            "image" : "itaytest/multi-worker",
            "hostname" : "worker",
            "essential" : false,
			"memory" : 128
        },
        {
            "name" : "nginx",
            "image" : "itaytest/nginx",
            "essential" : true,
			"memory" : 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort" : 80
                }
            ],
            "links": ["client","server"]
        }
    ]
}